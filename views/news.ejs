<html style="background-image: url('assets/img/back.jpg')">
    
    <head>
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>             
      <link href="https://fonts.googleapis.com/css2?family=Gotu&display=swap" rel="stylesheet"> 
    </head>

    <body>
                <div class="col-md-12 ml-auto mr-auto" >
                    <div style="color: #FB9821" class="brand text-left">
                      <h1 style="font-family: 'Gotu', sans-serif;">CHESS NEWS</h1>
                    </div>
                  </div>


        <table>
            <% for(var i=0; i < data.length; i=i+3) { %>
            <tr>
                <td>
                    <div class="card" style="width: 400;height: 400">
                            <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src= '<%= data[i]['urlToImage'] %>'>
                            </div>
                            <div class="card-content">
                            <span class="card-title activator grey-text text-darken-4"><%= data[i]['title'] %><i class="material-icons right">more_vert</i></span>
                            <p><%= data[i]['source']['name'] %></p>
                            </div>
                            <div class="card-reveal">
                            <span class="card-title grey-text text-darken-4"><%= data[i]['title'] %><i class="material-icons right">close</i></span>
                            <p><%= data[i]['description'] %></p>
                            </div>
                        </div>
                </td>
                <% i = i+1%>
                <td>
                        <div class="card" style="width: 400;height: 400">
                                <div class="card-image waves-effect waves-block waves-light">
                                <img class="activator" src= '<%= data[i]['urlToImage'] %>'>
                                </div>
                                <div class="card-content">
                                <span class="card-title activator grey-text text-darken-4"><%= data[i]['title'] %><i class="material-icons right">more_vert</i></span>
                                <p><%= data[i]['source']['name'] %></p>
                                </div>
                                <div class="card-reveal">
                                <span class="card-title grey-text text-darken-4"><%= data[i]['title'] %><i class="material-icons right">close</i></span>
                                <p><%= data[i]['description'] %></p>
                                </div>
                            </div>
                    </td>
                    <% i = i+1%>
                    <td>
                            <div class="card" style="width: 400;height: 400">
                                    <div class="card-image waves-effect waves-block waves-light">
                                    <img class="activator" src= '<%= data[i]['urlToImage'] %>'>
                                    </div>
                                    <div class="card-content">
                                    <span class="card-title activator grey-text text-darken-4"><%= data[i]['title'] %><i class="material-icons right">more_vert</i></span>
                                    <p><%= data[i]['source']['name'] %></p>
                                    </div>
                                    <div class="card-reveal">
                                    <span class="card-title grey-text text-darken-4"><%= data[i]['title'] %><i class="material-icons right">close</i></span>
                                    <p><%= data[i]['description'] %></p>
                                    </div>
                                </div>
                        </td>
            </tr>
            <% } %>
        </table>

        

                      
                  

        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </body>
</html>